{
  "manifest_version": 3,
  "name": "e-GP Document Helper",
  "version": "2.0.1",
  "description": "Extract Tender IDs from HTML pages and scanned documents using DOM + OCR scanning",

  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'; worker-src 'self';"
  },
  
  "permissions": [
    "downloads",
    "storage",
    "activeTab",
    "scripting",
    "clipboardWrite",
    "tabs",
    "offscreen"
  ],
  
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "toolbar-icon.png",
      "48": "toolbar-icon.png",
      "128": "toolbar-icon.png"
    }
  },
  
  "icons": {
    "16": "toolbar-icon.png",
    "48": "toolbar-icon.png",
    "128": "toolbar-icon.png"
  },
  
  "background": {
    "service_worker": "background.js"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "tesseract/tesseract.min.js",
        "tesseract/worker.min.js",
        "tesseract/tesseract-core.wasm.js",
        "tesseract/lang-data/*"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ]
}
